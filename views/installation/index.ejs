<html>
  <head>
    <title><%= __('Installation') %></title>
    <!-- Viewport mobile tag for sensible mobile support -->
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
      
    <link href="/styles/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/styles/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="/styles/ionicons.min.css" rel="stylesheet" type="text/css" />
     <!-- Theme style -->
     <link href="/styles/AdminLTE.css" rel="stylesheet" type="text/css" />
    <link href="/styles/scenariostep.css" rel="stylesheet" type="text/css" />
  </head>
  <body ng-app="app">
    
   <div class="container" data-ng-controller="installationCtrl as vm">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2><%= __('Gladys installation') %></h2>
                    <p class="lead"><%= __('It will just take a minute.') %></p>
                </div>
            </div>
            <!-- /.row -->  
        	<div class="row form-group">
                <div class="col-xs-12">
                    <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                        <li ng-click="vm.changeStep(1)" ng-class="{ 'active': vm.step == 1  }"><a href="#step-1">
                            <h4 class="list-group-item-heading"><%= __('Step') %> 1</h4>
                            <p class="list-group-item-text"><%= __('Welcome') %></p>
                        </a></li>
                        <li ng-click="vm.changeStep(2)" ng-class="{ 'active': vm.step == 2 }"><a href="#step-2">
                            <h4 class="list-group-item-heading"><%= __('Step') %> 2</h4>
                            <p class="list-group-item-text"><%= __('Configuration') %></p>
                        </a></li>
                        <li ng-click="vm.changeStep(3)" ng-class="{ 'active': vm.step == 3  }"><a href="#step-3">
                            <h4 class="list-group-item-heading"><%= __('Step') %> 3</h4>
                            <p class="list-group-item-text"><%= __('Congrats') %></p>
                        </a></li>
                    </ul>
                </div>
        	</div>
            <div class="row setup-content ng-cloak" id="step-1" ng-show="vm.step == 1">
                <div class="col-xs-12">
                    <div class="col-md-12 well text-center">
                        <h1><%= __('Welcome') %></h1>
                        <p><%= __('welcome-sentence-installation') %> <%= __('before-installing-sentence-installation') %></p>
                           <p><%= __('in-case-problem-check-forum') %> : <a href="http://gladysproject.com/forum" target="_blank">http://gladysproject.com/forum</a>.</p>
                            <div class="pull-right"><button ng-click="vm.changeStep(2)" class="btn btn-primary"><%= __('Next') %></button></div>
                 
                    </div>
                </div>
            </div>
            <div class="row setup-content ng-cloak" id="step-2" ng-show="vm.step == 2">
                <div class="col-xs-12">
                    <div class="col-md-12 well text-center">
                        <h2 class="text-center"><%= __('Configuration') %></h2>
                         
                         <form>
                             <div class="row">
                                <div class="col-md-4 col-md-offset-4"><label for="timePrepare" /><%= __('How many time do you need to prepare in the morning ? (in minutes)') %></label>
                                	<input type="number" class="form-control" ng-model="vm.preparationTime" />
                              </div>
                            </div>
                            
                         </form>
                         
                          <div class="pull-right"><button ng-click="vm.changeStep(3)" class="btn btn-primary"><%= __('Next') %></button></div>
                             
                        
                    </div>
                </div>
            </div>
            <div class="row setup-content ng-cloak" id="step-3" ng-show="vm.step == 3">
                <div class="col-xs-12">
                    <div class="col-md-12 well text-center">
                        <h1 class="text-center"><%= __('Congratulation') %></h1>
                            <div class="row">
                                <div class="col-md-8 col-md-offset-2">
                                <%= __('congrat-gladys-well-installed') %>
                                    <%= __('thank-you-for-installing-gladys') %>
                                    <%= __('gladys-only-work') %>
                                    </div>
                             </div>
                             
                             <hr class="small">
                            <div class="row"><a href="https://twitter.com/share" class="twitter-share-button" data-url="http://gladysproject.com" data-text="I'm using Gladys, the smart home automation assistant, and I love it !" data-size="large" data-via="gladysproject" data-count="none">Tweet</a>
                            </div>
                            
                             <div class="pull-right"><a href="/dashboard" class="btn btn-primary"><%= __('Finish') %></a></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->

    
    
    <!--SCRIPTS-->
    <script src="/min/production.min.js"></script>
    <!--SCRIPTS END-->

    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
  </body>
</html>